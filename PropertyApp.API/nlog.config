<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Info"
      internalLogFile="c:\temp\internal-nlog-AspNetCore.txt">

	<extensions>
		<add assembly="NLog.Web.AspNetCore"/>
	</extensions>

	<targets>
		<target xsi:type="File" name="allLogs"
				fileName="${basedir}/logs/alllogs-${shortdate}.txt"
				layout="${longdate}|${event-properties:item=EventId_Id:whenEmpty=0}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}" />

		<target xsi:type="File" name="exceptions"
				fileName="${basedir}/logs/allexceptionlogs.txt"
				layout="${longdate}|${event-properties:item=EventId_Id:whenEmpty=0}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}|url: ${aspnet-request-url}|action: ${aspnet-mvc-action}|${callsite}"
				keepFileOpen="true"
				encoding="utf-8" />

		<target xsi:type="File" name="propertyDeleted"
				fileName="${basedir}/logs/propertyDeletedlogs.txt"
				layout="${longdate}|${level:uppercase=true}|${message} ${exception:format=tostring}" />"
				
	</targets>

	<rules>
		<logger name="*" minlevel="Debug" writeTo="allLogs" />
		<logger name="*" minlevel="Error" writeTo="exceptions" />
		<logger name="PropertyApp.Application.Functions.Properties.Commands.DeleteProperty.DeletePropertyHandler" minlevel="Info" writeTo="propertyDeleted" />
	</rules>

</nlog>